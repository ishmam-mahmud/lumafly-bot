generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id                  String         @id
  name                String
  suggestionChannelId String?
  roleCategories      RoleCatrgory[]
}

model RoleCatrgory {
  id             Int     @id @default(autoincrement())
  name           String
  selfAssignable Boolean
  defaultColor   String  @default("DEFAULT")

  Server   Server @relation(fields: [serverId], references: [id])
  serverId String

  roles Role[]
}

model Role {
  id   String @id
  name String

  RoleCatrgory   RoleCatrgory @relation(fields: [roleCatrgoryId], references: [id])
  roleCatrgoryId Int
}
