{
  "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020", "ES5", "ES6"],
      "strict": false,
      "moduleResolution": "node",
      "importHelpers": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist/",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
  },
  "include": ["./src/**/*", "lib/utils"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
}
