{
  "name": "aasd_bot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "start": "npm run clean && npx tsc && node dist/index.js",
    "sendMessage": "npx tsc && node dist/cronjobs/sendMessage",
    "type-check": "npx tsc",
    "lint": "npx eslint ./src/**/*.ts",
    "type-coverage": "npx type-coverage"
  },
  "author": "glowstick-lamp",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^7.1.4",
    "discord.js": "^12.5.2",
    "discord.js-commando": "^0.12.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "husky": "^4.3.8",
    "tslib": "^2.1.0",
    "type-coverage": "^2.17.0",
    "typescript": "^4.2.3"
  },
  "typeCoverage": {
    "atLeast": 100,
    "ignoreFiles": [
      "src/cronjobs/*.ts"
    ],
    "ignoreCatch": true,
    "project": "tsconfig.json",
    "strict": true,
    "update": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run type-coverage && npm run lint",
      "pre-push": "npm run type-check"
    }
  }
}
