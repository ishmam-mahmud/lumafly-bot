{
  "name": "lumafly",
  "version": "2.0.0",
  "description": "Lumafly - A bot for the Asexual and Aromantic Spectrum Discord",
  "workspaces": [
    "packages/core"
  ],
  "scripts": {
    "prettier": "prettier --write . '!packages' && npm run prettier --workspaces",
    "---------util---------": "",
    "setup:init": "npm install && npm run setup:env:root && npm run setup:env:packages",
    "setup:env:root": "cp .env.base .env",
    "setup:env:packages": "ts-node -T scripts/setupEnvPackages.ts"
  },
  "author": "glowstick-lamp",
  "license": "MIT",
  "dependencies": {
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "bracketSameLine": true
  }
}
