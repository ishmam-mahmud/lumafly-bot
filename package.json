{
  "name": "lumafly",
  "version": "2.0.0",
  "description": "Lumafly - A bot for the Asexual and Aromantic Spectrum Discord",
  "scripts": {
    "----util----": "",
    "setup:init": "yarn install && yarn setup:env",
    "setup:env": "ts-node -T scripts/setupEnv.ts",
    "prettier": "prettier --write .",
    "----build/run----": "",
    "build": "esbuild --bundle --outfile=dist/main.js --platform=node --external:discord.js src/core/index.ts",
    "build:watch": "yarn build --watch",
    "build:minify": "yarn build --minify",
    "core:start": "node -r dotenv/config dist/main.js",
    "core:start:watch": "nodemon -x \"yarn core:start\"",
    "----db----": "",
    "db:migrate:gen": "prisma migrate dev --create-only --name",
    "db:migrate:run": "prisma migrate dev --skip-generate",
    "db:orm:gen": "prisma generate",
    "db:studio": "prisma studio",
    "-----commands-----": "",
    "gen:command": "ts-node -T scripts/generateCommand.ts",
    "postgen:command": "yarn index:command",
    "index:command": "ts-node -T scripts/indexCommands.ts",
    "postindex:command": "prettier --write ./src/core/commands",
    "-----events-----": "",
    "gen:event": "ts-node -T scripts/generateEventHandler.ts",
    "postgen:event": "yarn index:event",
    "index:event": "ts-node -T scripts/indexEvents.ts",
    "postindex:event": "prettier --write src/core/events",
    "----tests----": "",
    "test": "jest",
    "-----deploy-----": "",
    "build:deploy:commands": "ts-node -T scripts/buildDeployCommands.ts",
    "deploy:commands": "node -r dotenv/config dist/deploy.js",
    "prod:run": "yarn db:migrate:run && node deploy.js && node main.js"
  },
  "author": "glowstick-lamp",
  "license": "MIT",
  "dependencies": {
    "@discordjs/builders": "^0.8.1",
    "@discordjs/rest": "^0.1.0-canary.0",
    "@prisma/client": "^3.4.1",
    "discord-api-types": "^0.24.0",
    "discord.js": "^13.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.6",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "esbuild": "^0.13.13",
    "handlebars": "^4.7.7",
    "jest": "^27.3.1",
    "jest-mock-extended": "^2.0.4",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "prisma": "^3.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "bracketSameLine": true
  },
  "packageManager": "yarn@3.1.0"
}
